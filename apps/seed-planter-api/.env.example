# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# GitHub Configuration (SeedGPT's account for SaaS mode)
GITHUB_TOKEN=your_github_token_here
GITHUB_USERNAME=your_github_username
SEEDGPT_TEMPLATE_REPO=roeiba/SeedGPT

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Cloud Configuration (SeedGPT's account for SaaS mode)
GCP_PROJECT_ID=seedgpt
GCP_CREDENTIALS_PATH=  # Optional: path to service account JSON
GCP_REGION=us-central1

# Project Configuration
MAX_PROJECTS_PER_IP=5
WORKSPACE_BASE_PATH=/tmp/seedgpt-projects

# Deployment Configuration
DOCKER_REGISTRY=gcr.io
MIN_INSTANCES=0
MAX_INSTANCES=10

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60

# Database Configuration (Google Cloud SQL)
# For local development with Cloud SQL Proxy:
# DATABASE_URL=postgresql://postgres:your_password@localhost:5432/seedgpt
# For production (Cloud Run connects via Unix socket):
# DATABASE_URL=postgresql://postgres:your_password@/seedgpt?host=/cloudsql/your-project:region:instance-name
DATABASE_URL=sqlite:///./seedgpt.db  # SQLite for local dev only

# Authentication Configuration
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# Auth0 Configuration
AUTH0_DOMAIN=your-tenant.us.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret
AUTH0_AUDIENCE=https://your-tenant.us.auth0.com/api/v2/

# Stripe Configuration (for freemium pricing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRO_PRICE_ID=price_your_pro_price_id_here  # $49/month
STRIPE_ENTERPRISE_PRICE_ID=price_your_enterprise_price_id_here  # Custom pricing
