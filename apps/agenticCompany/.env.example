# GitHub Authentication
GITHUB_TOKEN=ghp_your_github_personal_access_token_here

# GitHub OAuth App Configuration (for guided setup)
# Create at: https://github.com/settings/developers
OAUTH_CLIENT_ID=your_oauth_client_id_here
OAUTH_CLIENT_SECRET=your_oauth_client_secret_here

# Anthropic API Key
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# Repository Configuration
REPO_URL=https://github.com/springsoftware-io/agenticCompany

# Optional: Specific issue number (leave empty for auto-selection)
ISSUE_NUMBER=

# Agent Mode: auto, dry-run, manual
AGENT_MODE=auto

# Workspace Path
WORKSPACE_PATH=/workspace

# Prompt Template: default, minimal, detailed, or path to custom file
PROMPT_TEMPLATE=default
